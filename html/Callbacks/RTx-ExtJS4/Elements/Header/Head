<%once>
my $type = 'default';

my $map = {
    'default'   => 'ext-all.js',
    'debug'     => 'ext-debug.js'
};

my $config = RT->Config->Get('RTx_ExtJS4_TYPE');

if ($config && $config =~ m/^default|debug$/) {
    $type = $config;
}

RT->Logger->debug('ExtJS include style: '. $type);

</%once>